<!doctype html>
<html>
  <head>
    <!-- Head content including Tailwind CSS import -->
    <%- include('./partials/head.ejs', { title: 'Settings' }) %>
  </head>

  <body class="bg-slate-300 min-h-screen">
    <!-- Header -->
    <%- include('./dashboard/components/header.ejs') %>

    <!-- Sidebar -->
    <%- include('./dashboard/components/nav.ejs') %>

    <!-- Main Content -->
    <div class="p-4 mt-16 h-full sm:ml-64">
      <div
        class="p-4 border-2 border-gray-200 mt-14 border-dashed rounded-lg overflow-auto"
      >
        <div class="px-1">
          <div
            class="p-4 border-2 border-gray-200 border-dashed rounded-lg bg-gray-100 shadow-inner"
          >
            <!-- Security Settings -->
            <section class="mb-8">
              <h2 class="text-xl font-semibold mb-4 text-gray-800">
                Security Settings
              </h2>
              <form class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div class="col-span-1">
                  <label for="username" class="text-sm text-gray-700 block mb-2"
                    >Username:</label
                  >
                  <input
                    type="text"
                    id="username"
                    placeholder="Enter your username"
                    name="username"
                    class="w-full rounded-md border bg-gray-50 border-gray-300 px-3 py-2 0 text-gray-800 focus:border-sky-500 focus:outline-none focus:ring-sky-500 focus:ring-opacity-50"
                  />
                </div>
                <div class="col-span-1">
                  <label
                    for="oldPassword"
                    class="text-sm text-gray-700 block mb-2"
                    >Old Password:</label
                  >
                  <input
                    type="password"
                    id="oldPassword"
                    name="oldPassword"
                    class="w-full rounded-md border bg-gray-50 border-gray-300 px-3 py-2 0 text-gray-800 focus:border-sky-500 focus:outline-none focus:ring-sky-500 focus:ring-opacity-50"
                  />
                </div>
                <div class="col-span-1">
                  <label for="password" class="text-sm text-gray-700 block mb-2"
                    >New Password:</label
                  >
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="w-full rounded-md border bg-gray-50 border-gray-300 px-3 py-2 0 text-gray-800 focus:border-sky-500 focus:outline-none focus:ring-sky-500 focus:ring-opacity-50"
                  />
                </div>
                <div class="col-span-1">
                  <label
                    for="confirmPassword"
                    class="text-sm text-gray-700 block mb-2"
                    >Confirm Password:</label
                  >
                  <input
                    type="password"
                    id="confirmPassword"
                    name="confirmPassword"
                    class="w-full rounded-md border bg-gray-50 border-gray-300 px-3 py-2 0 text-gray-800 focus:border-sky-500 focus:outline-none focus:ring-sky-500 focus:ring-opacity-50"
                  />
                </div>
              </form>
            </section>

            <!-- Email Settings -->
            <section class="mb-8">
              <h2 class="text-xl font-semibold mb-4 text-gray-800">
                Email Settings
              </h2>
              <form>
                <div>
                  <label for="email" class="block text-gray-700"
                    >Email Address:</label
                  >
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="input-field w-full rounded-md border bg-gray-50 border-gray-300 px-3 py-2 0 text-gray-800 focus:border-sky-500 focus:outline-none focus:ring-sky-500 focus:ring-opacity-50"
                    placeholder="Enter your email address"
                  />
                </div>
              </form>
            </section>

            <!-- Save Button -->
            <div class="flex justify-end">
              <button
                type="submit"
                class="bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600 focus:outline-none focus:bg-green-600"
              >
                Save Changes
              </button>
            </div>

            <!-- Logout Action -->
            <div class="text-center mt-8">
              <a
                href="/admin/logout"
                class="text-red-500 p-3 bg-gray-800 rounded-md hover:text-red-700"
                >Logout</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

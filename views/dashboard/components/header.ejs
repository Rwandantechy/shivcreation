<header
  class="fixed top-0 left-0 p-15 z-50 flex items-center justify-between w-full h-24 bg-gray-100 shadow dark:bg-gray-100"
>
  <a href="/shiv" class="flex items-center p-2">
    <img
      class="text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white"
      src="/images/logo.png"
      width="100"
      alt="logo"
    />
  </a>
  <!-- Sidebar Toggle Button -->
  <button
    id="sidebarToggle"
    class="sm:hidden p-2 rounded-lg bg-black hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-300"
    aria-label="Toggle sidebar"
  >
    <svg
      class="w-6 h-6 text-gray-600"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="blue"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
  <div class="ml-64 relative w-1/2">
    <form id="searchForm" class="flex items-center mx-auto">
      <div class="relative w-full px-4">
        <div
          class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none"
        ></div>
        <input
          type="text"
          id="searchInput"
          class="border bg-white shadow-2xl pl-4 border-gray-600 text-black text-sm rounded-lg ock w-full ps-10 p-2.5"
          placeholder="Search Anything..."
        />
      </div>
      <button
        type="submit"
        class="p-3 ms-2 text-sm font-medium text-white bg-blue-700 rounded-lg border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      >
        <svg
          class="w-4 h-4"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 20 20"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
          />
        </svg>
      </button>
    </form>
  </div>
  <div class="flex items-center justify-around space-x-4 mr-4">
    <button
      class="flex items-center gap-2 px-3 py-2 text-gray-900 rounded-lg hover:bg-gray-200"
    >
      <img class="w-8 h-8 rounded-full" src="/images/profile.png" alt="user" />
      <span id="username" class="text-sm capitalize font-medium"
        >Welcome Innocent !</span
      >
    </button>
    <div id="userOptions" class="relative">
      <button
        onclick="toggleDropdown()"
        class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-200 hover:bg-gray-300 focus:outline-none"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 text-gray-600"
          viewBox="0 0 20 20"
          fill="blue"
          stroke="blue"
        >
          <path
            d="M10 12L15 7L5 7L10 12Z"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </button>
      <div
        id="dropdownMenu"
        class="absolute right-0 z-50 mt-2 w-48 origin-top-right bg-amber-50 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 hidden"
      >
        <div
          class="py-1"
          role="menu"
          aria-orientation="vertical"
          aria-labelledby="user-menu"
        >
          <a
            href="/shiv/dashboard"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
            role="menuitem"
            >Dashboard</a
          >
          <a
            href="/shiv/setting"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
            role="menuitem"
            >Profile</a
          >
          <a
            href="/shiv"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
            role="menuitem"
            >Settings</a
          >
          <a
            id="logout"
            href="/shiv/logout"
            class="block px-4 text-red-500 py-2 text-sm hover:bg-gray-100"
            role="menuitem"
            >Logout</a
          >
        </div>
      </div>
    </div>
  </div>

  <script>
    function toggleDropdown() {
      const dropdownMenu = document.getElementById('dropdownMenu')
      dropdownMenu.classList.toggle('hidden')
    }
  </script>

  <script>
    function toggleDropdown() {
      const dropdownMenu = document.getElementById('dropdownMenu')
      dropdownMenu.classList.toggle('hidden')
    }
    const searchForm = document.getElementById('searchForm')
    const searchInput = document.getElementById('searchInput')
    searchForm.addEventListener('submit', (e) => {
      e.preventDefault()
      const searchValue = searchInput.value
      if (searchValue) {
        window.location.href = `/shiv/search/${searchValue}`
      }
    })
    const logout = document.querySelector('#logout')
    console.log(logout)
    logout.addEventListener('click', () => {
      // destroy session and token from cookies
      document.cookie = 'token= ; expires = Thu, 01 Jan 1970 00:00:00 GMT'
      document.cookie = 'session= ; expires = Thu, 01 Jan 1970 00:00:00 GMT'
      window.location.href = '/shiv'
    })
  </script>
</header>
